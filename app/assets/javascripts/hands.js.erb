$(function () {
    var highchartsOptions = Highcharts.setOptions(Highcharts.theme);
    var chart;
    $(document).ready(function() {
    
        var colors = Highcharts.getOptions().colors,
            categories = ['AA', 'KK', 'QQ', 'JJ', 'TT'],
            positions = ["0","1","2","3","4","5"]
            hand_winnings = <%=Hand.bbwon(5)%>
            name = 'Hand Winnings',
            data = [{
                    y: hand_winnings[0],
                    color: colors[0],
                    drilldown: {
                        name: "AA winnings by position ",
                        categories: positions,
                        data: <%=Hand.position_winnings(1)%>,
                        color: colors[0]
                    }
                }, {
                    y: hand_winnings[1],
                    color: colors[1],
                    drilldown: {
                        name: 'KK winnings by position',
                        categories: positions,
                        data: <%=Hand.position_winnings(2)%>,
                        color: colors[1]
                    }
                }, {
                    y: hand_winnings[2],
                    color: colors[2],
                    drilldown: {
                        name: 'QQ winnings by position',
                        categories: positions,
                        data: <%=Hand.position_winnings(3)%>,
                        color: colors[2]
                    }
                }, {
                    y: hand_winnings[3],
                    color: colors[3],
                    drilldown: {
                        name: 'JJ winnings by position',
                        categories: positions,
                        data: <%=Hand.position_winnings(4)%>,
                        color: colors[3]
                    }
                }, {
                    y: hand_winnings[4],

                    color: colors[4],
                    drilldown: {
                        name: 'TT',
                        categories: positions,
                        data: <%=Hand.position_winnings(5)%>,
                        color: colors[4]
                    }
                }];
    
        function setChart(name, categories, data, color) {
            chart.xAxis[0].setCategories(categories, false);
            chart.series[0].remove(false);
            chart.addSeries({
                name: name,
                data: data,
                color: color || 'white'
            }, false);
            chart.redraw();
        }
    
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'column'
            },
            title: {
                text: 'Winnings per hand'
            },
            subtitle: {
                text: 'Click the columns to view winnings by position.'
            },
            xAxis: {
                categories: categories
            },
            yAxis: {
                title: {
                    text: 'Total Big Blinds Won'
                }
            },
            plotOptions: {
                column: {
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function() {
                                var drilldown = this.drilldown;
                                if (drilldown) { // drill down
                                    setChart(drilldown.name, drilldown.categories, drilldown.data, drilldown.color);
                                } else { // restore
                                    setChart(name, categories, data);
                                }
                            }
                        }
                    },
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'itallic'
                        },
                        formatter: function() {
                            return this.y;
                        }
                    }
                }
            },
            tooltip: {
                formatter: function() {
                    var point = this.point,
                        s = this.x +':<b>'+ this.y +', big blinds won  ';
                    if (point.drilldown) {
                        s += 'Click to view '+ point.category +' winnings by position';
                    } else {
                        s += 'Click to return to browser brands';
                    }
                    return s;
                }
            },
            series: [{
                name: name,
                data: data,
                color: 'white'
            }],
            exporting: {
                enabled: false
            }
        });
    });
    
});


