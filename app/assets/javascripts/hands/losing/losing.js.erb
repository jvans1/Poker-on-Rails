
$(function () {
    var chart;
    var highchartsOptions = Highcharts.setOptions(Highcharts.theme);

    $(document).ready(function() {
    
        var colors = Highcharts.getOptions().colors,
            categories = ['Q8o', 'k9', '42', '62', '73'],
            top_5_losers = <%=Handhistory.biggest_losers(5)%>,
            positions = ["0", "1", "2", "3", "4", "5"],
            data = [{
                    y:top_5_losers[0],
                    color: colors[0],
                    drilldown: {
                        name: 'Winning by position with Q8o',
                        categories: positions,
                        data:  <%=Hand.position_winnings(118)%>,
                        color: colors[0]
                    }
                }, {
                    y: top_5_losers[1],
                    color: colors[1],
                    drilldown: {
                        name: 'Winnings by position with k9',
                        categories: positions,
                        
                        data: <%=Hand.position_winnings(121)%>,
                        color: colors[1]
                    }
                }, {
                    y: top_5_losers[2],
                    color: colors[2],
                    drilldown: {
                        name: 'Winnings by position with 42',
                        categories: positions,
                        data: <%=Hand.position_winnings(169)%>,
                        color: colors[2]
                    }
                }, {
                    y: top_5_losers[3],
                    color: colors[3],
                    drilldown: {
                        name: 'Winnings by position with 62',
                        categories: positions,
                        data:  <%=Hand.position_winnings(137)%>,
                        color: colors[3]
                    }
                }, {
                    y: top_5_losers[4],
                    color: colors[4],
                    drilldown: {
                        name: 'Winnings by position with 73',
                        categories:positions,
                        data: <%=Hand.position_winnings(147)%>,
                        color: colors[4]
                    }
                }];
    
        function setChart(name, categories, data, color) {
            chart.xAxis[0].setCategories(categories, false);
            chart.series[0].remove(false);
            chart.addSeries({
                name: name,
                data: data,
                color: color || 'white'
            }, false);
            chart.redraw();
        }
    
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'losing',
                type: 'column'
            },
            title: {
                text: 'Biggest losing hands'
            },
            xAxis: {
                categories: categories
            },
            yAxis: {
                title: {
                    text: 'Total winnings'
                }
            },
            plotOptions: {
                column: {
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function() {
                                var drilldown = this.drilldown;
                                if (drilldown) { // drill down
                                    setChart(drilldown.name, drilldown.categories, drilldown.data, drilldown.color);
                                } else { // restore
                                    setChart(name, categories, data);
                                }
                            }
                        }
                    },
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'bold'
                        },
                        formatter: function() {
                            return  this.y +' Dollars';
                        }
                    }
                }
            },
            tooltip: {
                formatter: function() {
                    var point = this.point,
                        s = this.x +':<b>' + this.y +' Dollars  lost</b><br/>';
                    if (point.drilldown) {
                        s += 'Click to view '+ point.category +' by position';
                    } else {
                        s += 'Click to return Original graph';
                    }
                    return s;
                }
            },
            series: [{
                name: name,
                data: data,
                color: 'white'
            }],
            exporting: {
                enabled: false
            }
        });
    });
    
});