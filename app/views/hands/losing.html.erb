<script type="text/javascript" charset="utf-8">

$(function () {
    var chart;
    $(document).ready(function() {
    
        var colors = Highcharts.getOptions().colors,
            categories = ['32', 'k9', '42', '62', '73'],
            name = 'Browser brands',
            data = [{
                    y:-5168,
                    color: colors[0],
                    drilldown: {
                        name: 'MSIE versions',
                        categories: ["0", "1", "2", "3", "4", "5"],
                        data:  [-1999, -3088, -23, -29, -10, -21],
                        color: colors[0]
                    }
                }, {
                    y: -5111,
                    color: colors[1],
                    drilldown: {
                        name: 'Firefox versions',
                        categories: ["0", "1", "2", "3", "4", "5"],
                        
                        data: [-1872, -2489, 22, -210, -385, -180],
                        color: colors[1]
                    }
                }, {
                    y: -4902,
                    color: colors[2],
                    drilldown: {
                        name: 'Chrome versions',
                        categories: ["0", "1", "2", "3", "4", "5"],
                        data: [-2047, -2755, -20, -23, -29, -31],
                        color: colors[2]
                    }
                }, {
                    y: -4831,
                    color: colors[3],
                    drilldown: {
                        name: 'Safari versions',
                        categories: ["0", "1", "2", "3", "4", "5"],
                        data:  [-1935, -2817, -14, -19, -26, -23],
                        color: colors[3]
                    }
                }, {
                    y: -4829,
                    color: colors[4],
                    drilldown: {
                        name: 'Opera versions',
                        categories:["0", "1", "2", "3", "4", "5"],
                        data: [-1935, -2817, -14, -19, -26, -23],
                        color: colors[4]
                    }
                }];
    
        function setChart(name, categories, data, color) {
            chart.xAxis[0].setCategories(categories, false);
            chart.series[0].remove(false);
            chart.addSeries({
                name: name,
                data: data,
                color: color || 'white'
            }, false);
            chart.redraw();
        }
    
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                type: 'column'
            },
            title: {
                text: 'Browser market share, April, 2011'
            },
            subtitle: {
                text: 'Click the columns to view versions. Click again to view brands.'
            },
            xAxis: {
                categories: categories
            },
            yAxis: {
                title: {
                    text: 'Total percent market share'
                }
            },
            plotOptions: {
                column: {
                    cursor: 'pointer',
                    point: {
                        events: {
                            click: function() {
                                var drilldown = this.drilldown;
                                if (drilldown) { // drill down
                                    setChart(drilldown.name, drilldown.categories, drilldown.data, drilldown.color);
                                } else { // restore
                                    setChart(name, categories, data);
                                }
                            }
                        }
                    },
                    dataLabels: {
                        enabled: true,
                        color: colors[0],
                        style: {
                            fontWeight: 'bold'
                        },
                        formatter: function() {
                            return this.y +'%';
                        }
                    }
                }
            },
            tooltip: {
                formatter: function() {
                    var point = this.point,
                        s = this.x +':<b>'+ this.y +'% market share</b><br/>';
                    if (point.drilldown) {
                        s += 'Click to view '+ point.category +' versions';
                    } else {
                        s += 'Click to return to browser brands';
                    }
                    return s;
                }
            },
            series: [{
                name: name,
                data: data,
                color: 'white'
            }],
            exporting: {
                enabled: false
            }
        });
    });
    
})
</script>
<div id = "container" height:400px></div>